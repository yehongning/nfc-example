<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.metapro.nfc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_card"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_card"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".NFCMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NFCCardActivity"
            android:label="@string/fragment_card_title"
            android:parentActivityName=".NFCMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:label="@string/fragment_about_us"
            android:parentActivityName=".NFCMainActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>
</manifest>